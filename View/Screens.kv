<GeneralScreen>
    MDBoxLayout
        orientation: 'vertical'
        padding: 150, 50, 50, 10
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Analysis"
            on_press: root.manager.current = 'AnalyzeScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Current dictionary"
            on_press: root.manager.current = 'WorkWithCurrentTableScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Work with tables"
            on_press: root.manager.current = 'WorkWithTablesScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Help"
            on_press: root.manager.current = 'HelpScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Exit"
            on_press: app.stop()


<WorkWithTablesScreen>
    BoxLayout:
        orientation: 'horizontal'
        MDBoxLayout:
            orientation: 'vertical'
            padding: 20, 200, 0, 90
            spacing: 80
            MDLabel:
                text:"Creation"
                font_size: "32sp"
            MDLabel:
                text:"Deletion"
                font_size: "32sp"
            MDLabel:
                text:"Switching"
                font_size: "32sp"
            MDLabel:
                text:"Current table name"
                font_size: "32sp"
        MDBoxLayout:
            orientation: 'vertical'
            padding: 10, 200, 100, 105
            spacing: 70
            MDTextField:
                id: create
                hint_text:"Enter table name"
            MDTextField:
                id: delete
                hint_text:"Enter table name"
            MDTextField:
                id: switch
                hint_text:"Enter table name"
            MDLabel:
                id: table_name
                text: "default_base"
                font_size: "32sp"
        MDBoxLayout:
            orientation: 'vertical'
            padding: 100, 220, 100, 95
            spacing: 90
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_create_press(create.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_delete_press(delete.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_switch_press(switch.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"Back"
                on_press: root.manager.current = 'GeneralScreen'


<WorkWithCurrentTableScreen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: 150, 50, 50, 10
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"View"
            on_press: root.on_view_press()
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Add new row"
            on_press: root.manager.current = 'AddRowScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Edit row"
            on_press: root.manager.current = 'EditRowScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Search rows"
            on_press: root.manager.current = 'SearchRowsScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Filter rows"
            on_press: root.manager.current = 'FilterRowsScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Back"
            on_press: root.manager.current = 'GeneralScreen'


<EditRowScreen>
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 50, 50, 450
        spacing: 20
        MDBoxLayout:
            orientation: "vertical"
            MDTextField:
                id: word_id
                hint_text:"Enter word id"
            MDRoundFlatButton:
                text: "Enter fields"
                on_press: root.on_enter_fields_press(word_id.text)
        MDTextField:
            id: normal_form
            hint_text:"Edit normal form"
        MDTextField:
            id: classes
            hint_text:"Edit classes"
        MDTextField:
            id: hypernyms
            hint_text:"Edit hypernyms"
        MDTextField:
            id: antonyms
            hint_text:"Edit antonyms"
        MDTextField:
            id: holonyms
            hint_text:"Edit holonyms"
        MDTextField:
            id: meronyms
            hint_text:"Edit meronyms"
        MDTextField:
            id: pos_synonyms
            hint_text:"Edit pos_synonyms"
        MDTextField:
            id: related
            hint_text:"Edit related"
        MDTextField:
            id: domain_items
            hint_text:"Edit domain_items"
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 250, 50, 300
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"OK"
            on_press: root.on_ok_press(word_id.text, normal_form.text, classes.text, hypernyms.text, antonyms.text, holonyms.text, meronyms.text, pos_synonyms.text, related.text, domain_items.text)
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"Back"
            on_press: root.manager.current = 'WorkWithCurrentTableScreen'


