<GeneralScreen>
    MDBoxLayout
        orientation: 'vertical'
        padding: 150, 50, 50, 10
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Analysis"
            on_press: root.manager.current = 'AnalyzeScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Current dictionary"
            on_press: root.manager.current = 'WorkWithCurrentTableScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Work with tables"
            on_press: root.manager.current = 'WorkWithTablesScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Help"
            on_press: root.manager.current = 'HelpScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Exit"
            on_press: app.stop()


<WorkWithTablesScreen>
    BoxLayout:
        orientation: 'horizontal'
        MDBoxLayout:
            orientation: 'vertical'
            padding: 20, 200, 0, 90
            spacing: 80
            MDLabel:
                text:"Creation"
                font_size: "32sp"
            MDLabel:
                text:"Deletion"
                font_size: "32sp"
            MDLabel:
                text:"Switching"
                font_size: "32sp"
            MDLabel:
                text:"Current table name"
                font_size: "32sp"
        MDBoxLayout:
            orientation: 'vertical'
            padding: 10, 200, 100, 105
            spacing: 70
            MDTextField:
                id: create
                hint_text:"Enter table name"
            MDTextField:
                id: delete
                hint_text:"Enter table name"
            MDTextField:
                id: switch
                hint_text:"Enter table name"
            MDLabel:
                id: table_name
                text: "default_base"
                font_size: "32sp"
        MDBoxLayout:
            orientation: 'vertical'
            padding: 100, 220, 100, 95
            spacing: 90
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_create_press(create.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_delete_press(delete.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"OK"
                on_press: root.on_switch_press(switch.text)
            MDRoundFlatButton:
                size_hint: .8, .08
                text:"Back"
                on_press: root.manager.current = 'GeneralScreen'


<WorkWithCurrentTableScreen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: 150, 50, 50, 10
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"View"
            on_press: root.on_view_press()
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Add new row"
            on_press: root.manager.current = 'AddRowScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Edit row"
            on_press: root.manager.current = 'EditRowScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Search row with filter"
            on_press: root.manager.current = 'SearchRowsScreen'
        MDRoundFlatButton:
            size_hint: 0.9, 0.3
            text:"Back"
            on_press: root.manager.current = 'GeneralScreen'


<EditRowScreen>
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 50, 50, 450
        spacing: 20
        MDBoxLayout:
            orientation: "vertical"
            MDTextField:
                id: word_id
                hint_text:"Enter word id"
            MDRoundFlatButton:
                text: "Enter fields"
                on_press: root.on_enter_fields_press(word_id.text)
        MDTextField:
            id: normal_form
            hint_text:"Edit normal form"
        MDTextField:
            id: part_of_speech
            hint_text:"Edit part of speech"
        MDTextField:
            id: gender
            hint_text:"Edit gender"
        MDTextField:
            id: number
            hint_text:"Edit number"
        MDTextField:
            id: common_case
            hint_text:"Edit common case"
        MDTextField:
            id: sentence_part
            hint_text:"Edit sentence part"
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 250, 50, 300
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"OK"
            on_press: root.on_ok_press(word_id.text, normal_form.text, part_of_speech.text, gender.text, number.text, common_case.text, sentence_part.text)
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"Back"
            on_press: root.manager.current = 'WorkWithCurrentTableScreen'


<AddRowScreen>
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 50, 50, 450
        spacing: 20
        MDTextField:
            id: word
            hint_text:"Enter word"
        MDTextField:
            id: normal_form
            hint_text:"Enter normal form"
        MDTextField:
            id: part_of_speech
            hint_text:"Enter part of speech"
        MDTextField:
            id: gender
            hint_text:"Enter gender"
        MDTextField:
            id: number
            hint_text:"Enter number"
    MDBoxLayout
        orientation: 'horizontal'
        padding: 80, 50, 50, 350
        spacing: 20
        MDTextField:
            id: common_case
            hint_text:"Enter common case"
        MDTextField:
            id: sentence_part
            hint_text:"Enter sentence part"
        MDTextField:
            id: number_in_sentence
            hint_text:"Enter word number in sentence"
        MDTextField:
            id: number_of_sentence
            hint_text:"Enter number of sentence"
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 80, 250, 50, 280
        spacing: 20
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"OK"
            on_press: root.on_ok_press(word.text, normal_form.text, part_of_speech.text, gender.text, number.text, common_case.text, sentence_part.text, number_in_sentence.text, number_of_sentence.text)
        MDRoundFlatButton:
            size_hint: 0.7, 0.2
            text:"Back"
            on_press: root.manager.current = 'WorkWithCurrentTableScreen'


<HelpScreen>
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 300, 0, 300, 15
        MDRoundFlatButton:
            size_hint: 0.5, 0.05
            text:"Back"
            on_press: root.manager.current = 'GeneralScreen'


<AnalyzeScreen>:
    FloatLayout:
        MDTextField:
            id: row_text
            multiline: True
            hint_text: "Enter text"
            font_size: 20
            pos_hint: {"center_x": .4, "center_y": .75}
            size_hint: .7, .4
        MDTextField:
            id: file_name
            hint_text: "Enter file name"
            pos_hint: {"center_x": .4, "center_y": .3}
            size_hint: .7, .1
        MDCheckbox:
            id: row_text_check
            group: "analyze_way"
            active: True
            pos_hint: {"center_x": .9, "center_y": .75}
            size_hint: .1, .1
        MDCheckbox:
            id: file_name_check
            group: "analyze_way"
            active: False
            pos_hint: {"center_x": .9, "center_y": .3}
            size_hint: .1, .1
        MDRoundFlatButton:
            id: apply_analyze
            text: "Analyze"
            on_press: root.on_apply_analyze_press(file_name_check.active)
            size_hint: .15, .08
            pos_hint: {"center_x": .85, "center_y": .1}
        MDRoundFlatButton:
            id: back
            text: "Back"
            on_press: root.manager.current = 'GeneralScreen'
            size_hint: .15, .08
            pos_hint: {"center_x": .15, "center_y": .1}
